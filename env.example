# Another Dashboard - Environment Variables
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# CORE APPLICATION
# =============================================================================
NODE_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# =============================================================================
# API INTEGRATIONS - MARKETING & ANALYTICS
# =============================================================================

# Mailchimp Marketing API (PRIMARY INTEGRATION)
# Get your API key from: https://mailchimp.com/help/about-api-keys/
# Format: key-datacenter (e.g., "abc123-us1")
MAILCHIMP_API_KEY="your-api-key-datacenter"
# Datacenter prefix extracted from API key (us1, us2, etc.)
MAILCHIMP_SERVER_PREFIX="us1"

# Google Analytics 4 (FUTURE)
# Service Account JSON key path for server-side authentication
GA4_SERVICE_ACCOUNT_KEY_PATH="./secrets/ga4-service-account.json"
GA4_PROPERTY_ID="123456789"
GA4_CLIENT_EMAIL="service-account@project.iam.gserviceaccount.com"

# YouTube Analytics API (FUTURE)
YOUTUBE_API_KEY="your-youtube-api-key"
YOUTUBE_CLIENT_ID="your-youtube-client-id"
YOUTUBE_CLIENT_SECRET="your-youtube-client-secret"

# Meta Graph API (FUTURE)
META_APP_ID="your-meta-app-id"
META_APP_SECRET="your-meta-app-secret"
META_ACCESS_TOKEN="your-long-lived-access-token"

# WordPress REST API (FUTURE)
WORDPRESS_API_URL="https://yoursite.com/wp-json/wp/v2/"
WORDPRESS_USERNAME="your-username"
WORDPRESS_APP_PASSWORD="your-application-password"

# Google Search Console API (FUTURE)
GSC_SERVICE_ACCOUNT_KEY_PATH="./secrets/gsc-service-account.json"
GSC_CLIENT_EMAIL="service-account@project.iam.gserviceaccount.com"

# =============================================================================
# PERFORMANCE & MONITORING
# =============================================================================
NEXT_PUBLIC_VERCEL_ANALYTICS="true"
NEXT_PUBLIC_ANALYTICS_ENDPOINT="/api/analytics"

# Optional: Error tracking (future enhancement)
# SENTRY_DSN="your-sentry-dsn"

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================
# Kinde Authentication
# Get your credentials from: https://app.kinde.com/
KINDE_CLIENT_ID="your_kinde_client_id"
KINDE_CLIENT_SECRET="your_kinde_client_secret"
KINDE_ISSUER_URL="https://your-tenant.kinde.com"
KINDE_SITE_URL="http://localhost:3000"
KINDE_POST_LOGOUT_REDIRECT_URL="http://localhost:3000"
KINDE_POST_LOGIN_REDIRECT_URL="http://localhost:3000/mailchimp"
# Optional: For Google OAuth connection
KINDE_GOOGLE_CONNECTION_ID="your_google_connection_id"

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================
# Enable detailed API logging in development
DEBUG_API_CALLS="true"
# Enable mock data when API keys are not available
ENABLE_MOCK_DATA="false"
