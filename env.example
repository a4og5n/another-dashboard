# Another Dashboard - Environment Variables
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# CORE APPLICATION
# =============================================================================
NODE_ENV="development"
# Use HTTPS for development since Next.js dev server runs on HTTPS
NEXT_PUBLIC_APP_URL="https://localhost:3000"

# =============================================================================
# DATABASE
# =============================================================================
# Neon Postgres (via Vercel integration)
# These are automatically added when you create a Neon database via Vercel Storage
# Pull these locally with: vercel env pull .env.local
DATABASE_URL="postgresql://user:password@host/database"
POSTGRES_PRISMA_URL="postgresql://user:password@host/database"
POSTGRES_URL="postgresql://user:password@host/database"

# =============================================================================
# API INTEGRATIONS - MARKETING & ANALYTICS
# =============================================================================

# Mailchimp OAuth 2.0 (PRIMARY INTEGRATION)
# Register your OAuth app at: Account > Extras > API Keys > Register App in Mailchimp
# For local development, use: https://127.0.0.1:3000/api/auth/mailchimp/callback
# For production, use: https://your-domain.vercel.app/api/auth/mailchimp/callback
MAILCHIMP_CLIENT_ID="your_mailchimp_client_id"
MAILCHIMP_CLIENT_SECRET="your_mailchimp_client_secret"
MAILCHIMP_REDIRECT_URI="https://127.0.0.1:3000/api/auth/mailchimp/callback"

# Encryption Key for OAuth Tokens
# Generate with: openssl rand -base64 32
# IMPORTANT: Must be 32 bytes base64 encoded (44 characters)
ENCRYPTION_KEY="your_base64_encryption_key_here"

# Google Analytics 4 (FUTURE)
# Service Account JSON key path for server-side authentication
GA4_SERVICE_ACCOUNT_KEY_PATH="./secrets/ga4-service-account.json"
GA4_PROPERTY_ID="123456789"
GA4_CLIENT_EMAIL="service-account@project.iam.gserviceaccount.com"

# YouTube Analytics API (FUTURE)
YOUTUBE_API_KEY="your-youtube-api-key"
YOUTUBE_CLIENT_ID="your-youtube-client-id"
YOUTUBE_CLIENT_SECRET="your-youtube-client-secret"

# Meta Graph API (FUTURE)
META_APP_ID="your-meta-app-id"
META_APP_SECRET="your-meta-app-secret"
META_ACCESS_TOKEN="your-long-lived-access-token"

# WordPress REST API (FUTURE)
WORDPRESS_API_URL="https://yoursite.com/wp-json/wp/v2/"
WORDPRESS_USERNAME="your-username"
WORDPRESS_APP_PASSWORD="your-application-password"

# Google Search Console API (FUTURE)
GSC_SERVICE_ACCOUNT_KEY_PATH="./secrets/gsc-service-account.json"
GSC_CLIENT_EMAIL="service-account@project.iam.gserviceaccount.com"

# =============================================================================
# PERFORMANCE & MONITORING
# =============================================================================
NEXT_PUBLIC_VERCEL_ANALYTICS="true"
NEXT_PUBLIC_ANALYTICS_ENDPOINT="/api/analytics"

# Optional: Error tracking (future enhancement)
# SENTRY_DSN="your-sentry-dsn"

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================
# Kinde Authentication
# Get your credentials from: https://app.kinde.com/
KINDE_CLIENT_ID="your_kinde_client_id"
KINDE_CLIENT_SECRET="your_kinde_client_secret"
KINDE_ISSUER_URL="https://your-tenant.kinde.com"
KINDE_SITE_URL="https://localhost:3000"
KINDE_POST_LOGOUT_REDIRECT_URL="https://localhost:3000"
KINDE_POST_LOGIN_REDIRECT_URL="https://localhost:3000/mailchimp"
# Optional: For Google OAuth connection
KINDE_GOOGLE_CONNECTION_ID="your_google_connection_id"

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================
# Enable detailed API logging in development
DEBUG_API_CALLS="true"
# Enable mock data when API keys are not available
ENABLE_MOCK_DATA="false"
